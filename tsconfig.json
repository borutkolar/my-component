{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./lib",
		"module": "ESNext",
		"target": "es6",
		"lib": [
			"es5",
			"es6",
			"dom"
		],
		"sourceMap": true,
		"jsx": "react",
		"skipLibCheck": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": false,
		"declaration": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"exclude": [
		"lib",
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack"
	]
}